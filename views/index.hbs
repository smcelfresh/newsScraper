<!-- NavBar -->
<nav>
	<div class="nav-wrapper blue">
		<a href="#!" class="brand-logo black-text center">NEWS SCRAPER!</a>
		
		<ul class="right">
			<li>
				<a class="waves-effect waves-light btn-large green" href="/scrape">Scrape Articles</a>
			</li>
		</ul>
	</div>
</nav>

<br><br>

<!-- All the articles will go in this container -->
<div class="container">

	<table>
		<tbody>

			{{#each articles}}
			<div class=row>

				<div class="col s8">
					<a href="{{this.link}}" class="collection-item black-text" target="_blank">{{this.title}}</a>
				</div>
				<div class="col s4">
					<button class="noteButton waves-effect waves-light btn-flat red" id="{{this._id}}">Click for Notes!</button>
				</div>

			</div>
			{{/each}}

		</tbody>
	</table>

</div>

<!-- modal that displays the user notes -->
<div id="noteModal" class="modal modal-fixed-footer">

    <div class="modal-content">
		<p>Notes</p>
		<ul class="messages collection"></ul>
	</div>
	
	<div class="modal-footer">
        <form name="noteForm" id="noteForm">
                    <input required placeholder="Type a note here!" type="text" name="noteText" id="noteText">
            <button class="btn red left" type="submit" id="noteButton">
                Post Note!
            </button>
            <a href="/" class="modal-action modal-close waves-effect waves-light btn-flat">Close</a>
        </form>
    </div>

</div>